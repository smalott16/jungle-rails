<% for item in @order.line_items %>
  <tr>
    <td>
      <%= image_tag item.product.image.tiny %>
    </td>
    <td>
      <h4><%= item.product.name %></h4>
      <br>
      <%= item.product.description %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= humanized_money_with_symbol item.total_price_cents / 100.00 %>
    </td>
  </tr>
<% end %>